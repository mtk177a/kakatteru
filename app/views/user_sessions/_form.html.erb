<div class="flex flex-col w-full border-opacity-50">

  <%= form_with url: login_path, method: :post do |f| %>
    <div class="my-3 input input-bordered flex items-center gap-2">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="my-3 input input-bordered flex items-center gap-2">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="mt-3 btn btn-primary flex w-full justify-center rounded-md">
      <%= f.submit "Login" %>
    </div>
  <% end %>

</div>
