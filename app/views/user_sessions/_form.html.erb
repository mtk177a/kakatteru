<div class="flex flex-col w-full border-opacity-50">

  <%= form_with url: login_path, method: :post do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "my-3 flex w-full items-center gap-2" %>
      <%= f.text_field :email, class: "my-3 input input-bordered flex w-full items-center gap-2"  %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "my-3 flex w-full items-center gap-2" %>
      <%= f.password_field :password, class: "my-3 input input-bordered flex w-full items-center gap-2"  %>
    </div>

    <div class="mt-3 btn btn-primary flex w-full justify-center rounded-md">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

</div>
