<div class="flex flex-col w-full border-opacity-50">

<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, "メールアドレス", style: "display: block", class: "my-3 flex items-center gap-2" %>
    <%= form.text_field :email, class: "my-3 input input-bordered flex w-full items-center gap-2" %>
  </div>

  <div>
    <%= form.label :password, "パスワード", class: "my-3 flex items-center gap-2" %>
    <%= form.password_field :password, class: "my-3 input input-bordered flex w-full items-center gap-2" %>
  </div>

  <div>
    <%= form.label :password_confirmation, "パスワード確認", class: "my-3 flex items-center gap-2" %>
    <%= form.password_field :password_confirmation, class: "my-3 input input-bordered flex w-full items-center gap-2" %>
  </div>

  <div>
    <%= form.submit "保存", class: "mt-3 btn btn-primary flex w-full justify-center rounded-md" %>
  </div>
<% end %>

</div>
